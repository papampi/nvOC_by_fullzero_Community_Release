export DISPLAY=:0

export NVOC="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
source ${NVOC}/1bash
source ${NVOC}/0algo_id

# Text output beautifier, use bold text and colors
USE_COLOR="YES"    # YES/NO

if [[ $USE_COLOR == YES ]]
then
  N='\e[0m'     # Normal
  B='\e[1m'     # Bold
  R='\e[31m'    # Red
  G='\e[32m'    # Green
  C='\e[36m'    # Cyan
  Y='\e[33m'    # Yellow
else
  unset N B R G C Y
fi

